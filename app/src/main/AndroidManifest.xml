<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jaimetoqu.hacks">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="DATABASE"
            android:value="hacks.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="false" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.jaimetoqu.hacks" />

        <activity android:name=".views.signin.SigninActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.post.PostActivity" />
        <activity android:name=".views.directory.DirectoryActivity" />
        <activity android:name=".views.signupcompany.SignUpCompanyActivity" />
        <activity android:name=".views.companydetails.CompanyDetailsActivity" />
        <activity android:name=".views.companydetails.CompanyDetailsActivity" />
        <activity android:name=".views.history.HistoryActivity" />
    </application>

</manifest>